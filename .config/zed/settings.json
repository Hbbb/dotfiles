// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
	"agent_servers": {
		"claude": {
			"default_model": "claude code",
			"default_mode": "default",
		},
	},
	"tab_bar": {
		"show_tab_bar_buttons": true,
	},
	"tabs": {
		"show_diagnostics": "errors",
		"close_position": "right",
		"file_icons": true,
		"git_status": true,
	},
	"use_system_window_tabs": false,
	"git_panel": {
		"tree_view": false,
	},
	"colorize_brackets": true,
	"base_keymap": "VSCode",
	"telemetry": {
		"diagnostics": false,
		"metrics": false,
	},
	"agent_buffer_font_size": 15.0,
	"agent_ui_font_size": 17.0,
	"ui_font_weight": 500.0,
	"ui_font_family": ".ZedMono",
	"buffer_line_height": "comfortable",
	"sticky_scroll": {
		"enabled": true,
	},
	"icon_theme": {
		"mode": "system",
		"light": "Catppuccin Latte",
		"dark": "Catppuccin Latte",
	},
	"edit_predictions": {
		"provider": "zed",
		"disabled_globs": ["*.mdc", "*.md"],
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null,
		},
		"enabled_in_text_threads": false,
	},
	"show_edit_predictions": true,
	"autosave": "on_focus_change",
	"agent": {
		"tool_permissions": {
			"default": "allow",
		},
		"use_modifier_to_send": false,
		"enable_feedback": false,
	},
	"vim_mode": true,
	"helix_mode": true,
	"vim": {
		"use_system_clipboard": "on_yank",
		"cursor_shape": {
			"normal": "block",
			"insert": "bar",
			"visual": "underline",
			"replace": "hollow",
		},
	},
	"ui_font_size": 16,
	"buffer_font_size": 15,
	"buffer_font_family": ".ZedMono",
	"git": {
		"git_gutter": null,
		"gutter_debounce": null,
		"inline_blame": {
			"enabled": false,
		},
	},
	"theme": {
		"mode": "system",
		"light": "Kanso Pearl (Borderless + No italics)",
		"dark": "Kanso Mist (No italics)",
	},
	"hard_tabs": true,
	"journal": {
		"path": "~",
	},
	"languages": {
		"Swift": {
			"enable_language_server": true,
			"language_servers": ["sourcekit-lsp"],
			"formatter": "language_server",
			"format_on_save": "on",
		},
		"YAML": {
			"hard_tabs": false,
		},
		"Markdown": {
			"soft_wrap": "preferred_line_length",
			"preferred_line_length": 72,
			"format_on_save": "off",
		},
	},
	"which_key": {
		"enabled": true,
	},
	"profiles": {
		"Writing": {
			"buffer_font_family": "iA Writer Duo S",
			"buffer_font_size": 16,
			"buffer_font_weight": 450,
			"buffer_line_height": {
				"custom": 1.45,
			},

			"theme": "Catppuccin Latte - No Italics",

			"scrollbar": {
				"show": "never",
			},

			"soft_wrap": "preferred_line_length",
			"preferred_line_length": 72,
			"show_wrap_guides": false,

			"current_line_highlight": "none",
			"show_whitespaces": "none",
			"indent_guides": {
				"enabled": false,
			},

			"gutter": {
				"line_numbers": false,
				"runnables": false,
				"breakpoints": false,
				"folds": false,
				"min_line_number_digits": 1,
			},

			"tab_bar": {
				"show": true,
				"show_nav_history_buttons": false,
				"show_tab_bar_buttons": false,
			},

			"toolbar": {
				"breadcrumbs": false,
				"quick_actions": false,
				"selections_menu": false,
				"agent_review": false,
				"code_actions": false,
			},

			"scroll_beyond_last_line": "one_page",
			"centered_layout": {
				// "left_padding": 0.22,
				// "right_padding": 0.22,
			},
		},
	},
}
