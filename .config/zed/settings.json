// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
	"disable_ai": true,
	"debugger": {
		"dock": "right"
	},
	"icon_theme": "Catppuccin Latte",
	"edit_predictions": {
		"disabled_globs": [],
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null
		},
		"enabled_in_text_threads": false
	},
	"show_edit_predictions": true,
	"autosave": "on_focus_change",
	/* Duplicated key auto-commented: "agent": {
		"always_allow_tool_actions": true,
		"default_profile": "write",
		"default_model": {
			"provider": "anthropic",
			"model": "claude-sonnet-4-thinking-latest"
		},
		"version": "2"
	}, */
	"vim_mode": true,
	"vim": {
		"cursor_shape": {
			"normal": "block",
			"insert": "bar",
			"visual": "underline",
			"replace": "hollow"
		},
		"use_system_clipboard": "on_yank"
	},
	"ui_font_size": 18,
	"buffer_font_size": 16,
	"git": {
		"git_gutter": null,
		"gutter_debounce": null,
		"inline_blame": {
			"enabled": false
		}
	},
	"theme": {
		"mode": "system",
		"light": "Kanso Pearl (No italics)",
		"dark": "Ayu Dark"
	},
	"hard_tabs": true,
	"journal": {
		"path": "~"
	},
	"languages": {
		"Swift": {
			"enable_language_server": true,
			"language_servers": ["sourcekit-lsp"],
			"formatter": "language_server",
			"format_on_save": "on"
		},
		"Templ": {
			"format_on_save": "on",
			"language_servers": [
				"tailwindcss-language-server",
				"vscode-html-language-server",
				"emmet-language-server"
			],
			"inlay_hints": {
				"enabled": true
			}
		},
		"Ruby": {
			"enable_language_server": false
		}
	},
	"lsp": {
		"tailwindcss-language-server": {
			"settings": {
				"includeLanguages": {
					"templ": "html",
					"Templ": "html"
				}
			}
		},
		"vscode-html-language-server": {
			"settings": {
				"html": {
					"validate": {
						"scripts": true,
						"styles": true
					},
					"format": {
						"wrapLineLength": 120,
						"unformatted": "wbr,code,pre"
					},
					"includeLanguages": {
						"templ": "html",
						"Templ": "html"
					}
				}
			}
		}
	},
	"project_panel": {
		"dock": "right"
	},
	"agent": {
		"profiles": {
			"write": {
				"name": "Write",
				"tools": {
					"copy_path": true,
					"create_directory": true,
					"delete_path": true,
					"diagnostics": true,
					"edit_file": true,
					"fetch": true,
					"list_directory": true,
					"move_path": true,
					"now": true,
					"find_path": true,
					"read_file": true,
					"grep": true,
					"terminal": true,
					"thinking": true,
					"web_search": true,
					"open": true
				},
				"enable_all_context_servers": true,
				"context_servers": {}
			}
		},
		"default_model": {
			"provider": "anthropic",
			"model": "claude-sonnet-4-thinking-latest"
		},
		"default_profile": "write",
		"always_allow_tool_actions": true,
		"dock": "left",
		"button": false
	},
	"title_bar": {
		"show_sign_in": false
	}
}
